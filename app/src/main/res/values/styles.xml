<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.NavigationRailView">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/line_background</item>
    </style>

    <style name="DescriptionBottomSheet">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/black_73_alfa</item>
    </style>

    <style name="Photo">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/ic_baseline_no_photography_24</item>
    </style>

    <style name="Photo.OfDay">
        <item name="android:layout_height">0dp</item>
        <item name="android:contentDescription">@string/photo_of_the_day_stub</item>
    </style>

    <style name="Photo.OnBottomNavigation">
        <item name="android:layout_marginBottom">55dp</item>
    </style>

    <style name="TabNavigation">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/design_default_color_primary_dark</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>