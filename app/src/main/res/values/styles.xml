<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BottomNavigationView" parent="Widget.MaterialComponents.NavigationRailView">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="Line">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:background">@color/line_background</item>
    </style>

    <style name="Description">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Photo">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/ic_baseline_no_photography_24</item>
    </style>

    <style name="Photo.OfDay">
        <item name="android:layout_height">0dp</item>
        <item name="android:contentDescription">@string/photo_of_the_day_stub</item>
    </style>

    <style name="Photo.OfDay.OnBottomNavigation">
        <item name="android:layout_marginBottom">55dp</item>
    </style>

</resources>