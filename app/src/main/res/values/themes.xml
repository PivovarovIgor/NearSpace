<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NearSpace" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance</item>
        <item name="shapeAppearanceLargeComponent">@style/AppShapeAppearance</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearanceSmallComponents</item>
        <item name="fabAnimationMode">scale</item>
    </style>

    <style name="Theme.NearSpace.Martian">
        <item name="colorPrimary">@color/orange_900</item>
        <item name="colorAccent">@color/yellow_600</item>
        <item name="android:colorBackground">@color/blue_100</item>
        <item name="shapeAppearance">@style/AppShapeAppearance</item>
        <item name="shapeAppearanceMediumComponent">@style/AppShapeAppearance.Martian</item>
        <item name="shapeAppearanceLargeComponent">@style/AppShapeAppearance.Martian</item>
        <item name="shapeAppearanceSmallComponent">@style/AppShapeAppearanceSmallComponents.Martian</item>
        <item name="fabAnimationMode">slide</item>
    </style>

    <style name="AppShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">27dp</item>
    </style>
    <style name="AppShapeAppearanceSmallComponents" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">25dp</item>
    </style>

    <style name="AppShapeAppearance.Martian">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">15dp</item>
    </style>
    <style name="AppShapeAppearanceSmallComponents.Martian">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">10dp</item>
    </style>

</resources>